{
  "name": "@lazy-panda-ui/lazy-panda-ui",
  "version": "0.1.3",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "description": "A simple UI framework for React Native (Expo compatible)",
  "keywords": [
    "react-native",
    "expo",
    "ui",
    "components"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lazy-panda-ui/lazy-panda-ui.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "peerDependencies": {
    "expo": ">=44.0.0",
    "react": ">=17.0.0",
    "react-native": ">=0.64.0"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-native": "^0.67.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "prettier": "^3.6.2",
    "react": "17.0.2",
    "react-native": "^0.68.0",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --project tsconfig.json",
    "test": "jest",
    "lint": "eslint ./src --ext .ts,.tsx",
    "lint:fix": "eslint ./src --ext .ts,.tsx --fix",
    "lint:check": "eslint ./src --ext .ts,.tsx --max-warnings 0",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint:check && npm run type-check && npm run test && npm run build",
    "dist": "npm run test && npm run build && cp -R src dist && find dist -type f -name '*.ts' -delete && find dist -type f -name '*.tsx' -delete"
  },
  "overrides": {
    "braces": "^3.0.3",
    "ip": "^2.0.1",
    "micromatch": "^4.0.8",
    "@react-native-community/cli": "^13.6.0",
    "@react-native-community/cli-hermes": "^13.6.0"
  },
  "dependencies": {
    "@react-native-community/slider": "^4.5.7"
  }
}
